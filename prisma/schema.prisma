// ZeroLens - AI Product Photography Marketplace Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ==================== USER MODELS ====================

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  name            String?
  password        String?   // Hashed, null for OAuth users
  image           String?
  role            Role      @default(BUYER)
  bio             String?   @db.Text
  emailVerified   DateTime?
  stripeCustomerId    String?
  stripeConnectId     String?   // For sellers to receive payouts
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  // Relations
  prompts         Prompt[]
  purchases       Purchase[]
  reviews         Review[]
  images          GeneratedImage[]
  accounts        Account[]
  sessions        Session[]
  cartItems       CartItem[]
  savedPrompts    SavedPrompt[]
  customPrompts   CustomPrompt[]

  @@index([email])
  @@index([stripeCustomerId])
}

enum Role {
  BUYER
  SELLER
  ADMIN
}

// ==================== PROMPT MODELS ====================

model Prompt {
  id            String       @id @default(cuid())
  title         String
  description   String       @db.Text
  promptText    String       @db.Text  // The actual AI prompt
  category      Category
  price         Int          // In cents (e.g., 999 = $9.99)
  rating        Float        @default(0)
  reviewCount   Int          @default(0)
  salesCount    Int          @default(0)
  status        PromptStatus @default(PENDING)
  tags          String[]     // Array of tag strings
  exampleImages String[]     // URLs of example generated images
  featured      Boolean      @default(false)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  
  // Relations
  creator       User         @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  creatorId     String
  purchases     Purchase[]
  reviews       Review[]
  images        GeneratedImage[]
  cartItems     CartItem[]
  savedBy       SavedPrompt[]

  @@index([creatorId])
  @@index([category])
  @@index([status])
  @@index([featured])
}

enum Category {
  FASHION
  ELECTRONICS
  FOOD
  JEWELRY
  FURNITURE
  BEAUTY
  SPORTS
  TOYS
  OTHER
}

enum PromptStatus {
  PENDING
  APPROVED
  REJECTED
}

// ==================== COMMERCE MODELS ====================

model Purchase {
  id              String        @id @default(cuid())
  amount          Int           // Total amount in cents
  platformFee     Int           // 30% commission
  sellerEarnings  Int           // 70% to seller
  stripeSessionId String?
  stripePaymentId String?
  status          PaymentStatus @default(PENDING)
  createdAt       DateTime      @default(now())
  
  // Relations
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String
  prompt   Prompt @relation(fields: [promptId], references: [id], onDelete: Cascade)
  promptId String

  @@index([userId])
  @@index([promptId])
  @@index([status])
  @@index([stripeSessionId])
}

model CartItem {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String
  prompt   Prompt @relation(fields: [promptId], references: [id], onDelete: Cascade)
  promptId String

  @@unique([userId, promptId])
  @@index([userId])
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// ==================== PROMPT POCKET MODEL ====================

model SavedPrompt {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String
  prompt   Prompt @relation(fields: [promptId], references: [id], onDelete: Cascade)
  promptId String

  @@unique([userId, promptId])  // One save per user per prompt
  @@index([userId])
}

// ==================== CUSTOM PROMPT MODEL ====================

model CustomPrompt {
  id          String   @id @default(cuid())
  title       String
  promptText  String   @db.Text
  image       String?  @db.Text
  isPublic    Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String

  @@index([userId])
}

// ==================== REVIEW MODEL ====================

model Review {
  id        String   @id @default(cuid())
  rating    Int      // 1-5 stars
  comment   String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String
  prompt   Prompt @relation(fields: [promptId], references: [id], onDelete: Cascade)
  promptId String
  
  @@unique([userId, promptId]) // One review per user per prompt
  @@index([promptId])
}

// ==================== IMAGE GENERATION MODEL ====================

model GeneratedImage {
  id           String           @id @default(cuid())
  originalUrl  String           // User's uploaded product image
  generatedUrl String?          // AI-generated result
  status       GenerationStatus @default(PENDING)
  createdAt    DateTime         @default(now())
  
  // Relations
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String
  prompt   Prompt? @relation(fields: [promptId], references: [id], onDelete: SetNull)
  promptId String?

  @@index([userId])
  @@index([status])
}

enum GenerationStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

// ==================== NEXTAUTH.JS MODELS ====================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
